{% extends '::layout.html.twig' %}
{% block content %}
    <div class="row">
        <div class="span9">
            <div id="post{{ post.id }}">
                <div class="page-header">
                    <h1>{{ post.title }}</h1>
                </div>
                <div>
                    {% if is_granted('ROLE_USER') %}
                        <div class="pull-right">
                            <a href="{{ path('avro_blog_post_edit', {'id': post.id }) }}"><i class="sprite-page_edit"></i>Edit Post</a> | 
                            <a href="{{ path('avro_blog_post_delete', {'id': post.id }) }}"><i class="sprite-page_delete"></i>Delete Post</a>
                        </div>
                    {% endif %}

                    {{ post.content | raw }}
                </div>
            </div>
        </div><!--/span-->
        <div class="span3">
            <div class="well sidebar-nav">
                {% include 'AvroBlogBundle:Blog:posts_menu.html.twig' %}
            </div><!--/.well -->
        </div><!--/span-->
    </div>
    <hr />
    {% include 'FOSCommentBundle:Thread:async.html.twig' with {'id': 'blog_'~post.id } %}
{% endblock %}

