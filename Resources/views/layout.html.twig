{% extends '::siteLayout.html.twig' %}

{% block content %}
    <div class="row-fluid">
        <div class="span9">
            {% block blog_content %}{% endblock %}
        </div>
        <div class="span3 center-align">
            {% render 'AvroBlogBundle:Post:widget' %}
        </div>
    </div>
{% endblock %}

{% block javascript %}
    $form.find('textarea.tinymce').tinymce({
        // Location of TinyMCE script
        script_url : "{{ asset('bundles/applicationcore/components/tinymce/jscripts/tiny_mce/tiny_mce.js') }}",

        // General options
        width : "840",
        height : "500",
        mode : "textareas",
        theme : "advanced",
        plugins : "autolink,lists,spellchecker,pagebreak,style,layer,table,save,advhr,advimage,advlink,emotions,iespell,inlinepopups,insertdatetime,preview,media,searchreplace,print,contextmenu,paste,directionality,fullscreen,noneditable,visualchars,nonbreaking,xhtmlxtras,template",

        // Theme options
        theme_advanced_buttons1 : "bold,italic,underline,|,justifyleft,justifycenter,justifyright,justifyfull,|,styleselect,formatselect,fontselect,fontsizeselect",
        theme_advanced_buttons2 : "cut,copy,paste,|,bullist,numlist,|,outdent,indent,blockquote,|,undo,redo,|,link,unlink,anchor,image,|,forecolor,backcolor,|,code,|,spellchecker",
        theme_advanced_buttons3 : "tablecontrols,|,hr,advhr,removeformat,charmap,emotions,|,ltr,rtl,|,fullscreen",
        theme_advanced_toolbar_location : "top",
        theme_advanced_toolbar_align : "left",
        theme_advanced_statusbar_location : "bottom",
        theme_advanced_resizing : true,
        content_css: "{{ asset('bundles/avroasset/avro/css/tiny_mce.css') }}",

        // Skin options
                    skin : "o2k7",
                    skin_variant : "silver",
                });


{% endblock %}
