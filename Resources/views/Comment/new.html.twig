{% extends 'AvroBlogBundle::layout.html.twig' %}
{% block content %}
<div class="page-header">
    <h1>New Comment</h1>
</div>
    <form id="avro_blog_comment_form" class="form-horizontal" method="post" action="{{ path('avro_blog_comment_new') }}" {{ form_enctype(commentForm) }}>  
        {% include 'AvroBlogBundle:Comment:form.html.twig' %}
        <div class="form-actions">
            <a class="btn" title="Close this form." href="{{ path('avro_blog_comment_list') }}">Back to List</a>
            <input type="submit" class="btn-large btn-primary" title="Create this comment." value="Create Comment"/>
        </div>
    </form>
{% endblock %}

