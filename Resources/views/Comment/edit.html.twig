{% extends 'AvroBlogBundle::layout.html.twig' %}
{% block content %}
    <div class="page-header">
        <h1>Edit Comment</h1>
    </div>
    <form id="avro_blog_comment_form" class="form-horizontal" method="post" action="{{ path('avro_blog_comment_edit', { 'id': comment.id }) }}" {{ form_enctype(commentForm) }}>  
        {% include 'AvroBlogBundle:Comment:form.html.twig' %}
        <div class="form-actions">
            <a id="deleteComment" class="btn pull-left confirm btn-danger" href="{{ path('avro_blog_comment_delete', { 'id': comment.id }) }}" title="Are you sure you want to delete this comment?">Delete</a>
            <a class="btn" href="{{ path('avro_blog_comment_list') }}">Back to list</a>
            <button class="btn btn-primary" title="Update the comment">Update Comment</button>
        </div>
    </form>
{% endblock %}

