<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">


    <route id="avro_blog_blog_home" pattern="/blog">
        <default key="_controller">AvroBlogBundle:Blog:index</default>
        <default key="slug"></default>
    </route>

    <route id="avro_blog_blog_index" pattern="/blog/{slug}">
        <default key="_controller">AvroBlogBundle:Blog:index</default>
        <default key="slug"></default>
    </route>

    <route id="avro_blog_blog_tag" pattern="/blog/tag/{slug}">
        <default key="_controller">AvroBlogBundle:Blog:tag</default>
        <default key="slug"></default>
    </route>

    <route id="avro_blog_post_list" pattern="/post/list">
        <default key="_controller">AvroBlogBundle:Post:list</default>
        <default key="filter">null</default>
    </route>

    <route id="avro_blog_post_new" pattern="/post/new">
        <default key="_controller">AvroBlogBundle:Post:new</default>
    </route>

    <route id="avro_blog_post_edit" pattern="/post/edit{id}">
        <default key="_controller">AvroBlogBundle:Post:edit</default>
        <default key="id">null</default>
    </route>

    <route id="avro_blog_post_show" pattern="/post/show/{slug}">
        <default key="_controller">AvroBlogBundle:Post:show</default>
        <default key="slug">null</default>
    </route>

    <route id="avro_blog_tag_new" pattern="/tag/new">
        <default key="_controller">AvroBlogBundle:Tag:new</default>
    </route>

    <route id="avro_blog_tag_list" pattern="/tag/list">
        <default key="_controller">AvroBlogBundle:Tag:list</default>
    </route>

    <route id="avro_blog_tag_edit" pattern="/tag/edit/{id}">
        <default key="_controller">AvroBlogBundle:Tag:edit</default>
    </route>

    <route id="avro_blog_tag_delete" pattern="/tag/delete/{id}">
        <default key="_controller">AvroBlogBundle:Tag:delete</default>
    </route>

    <route id="avro_blog_tag_widget" pattern="/tag/widget">
        <default key="_controller">AvroBlogBundle:Tag:widget</default>
    </route>

</routes>
